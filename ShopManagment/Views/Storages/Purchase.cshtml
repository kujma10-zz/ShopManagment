@model ShopManagment.Balance

@{
    ViewBag.Title = "Purchase";
}

<h2>პროდუქციის შესყიდვა</h2>
<p></p>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Product</legend>
        
        @Html.HiddenFor(model => model.StorageID)

        <div class="editor-label">
            @Html.LabelFor(model => model.CatID, "კატეგორია")
        </div>
        <div class="editor-field">
            @Html.DropDownList("CatID", String.Empty)
            @Html.ValidationMessageFor(model => model.CatID)
        </div>

         <div class="editor-label">
            @Html.LabelFor(model => model.ProductID, "პროდუქტი")
        </div>
        <div class="editor-field">
            @Html.DropDownList("ProductID", String.Empty)
            @Html.ValidationMessageFor(model => model.ProductID)
        </div>

       
        <div class="editor-label">
            @Html.LabelFor(model => model.Quantity, "რაოდენობა")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Quantity)
            @Html.ValidationMessageFor(model => model.Quantity)
        </div>

        <p>
            <input type="submit" value="შესყიდვა" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("უკან", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script type="text/javascript">
    $('#Quantity').change(function () {
        var minVal = 1;
        var thisVal = $(this).val();
        if (parseInt(thisVal) < parseInt(minVal)) {
            $(this).val(minVal);
        }
    });

</script>